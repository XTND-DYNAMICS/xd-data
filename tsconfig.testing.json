{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": [
      "es2017",
      "dom",
      "es6",
      "es2015.iterable",
      "es2018.promise"
    ],
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "inlineSourceMap": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "rootDir": "tests",
    "paths": {},
    "types": [
      "node",
      "mocha",
      "reflect-metadata"
    ],
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "dist/**/*.ts",
    "tests/**/*.ts"
  ]
}
